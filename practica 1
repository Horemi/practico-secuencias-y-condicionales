#include <iostream>

using namespace std;

int main()
{
    float a, b, c, p;
    cout<<"ingresa numeros que esten entre 0 y 10"<<endl;
    cout<<"ingresa el primer numero: ";
    cin>>a;
    if(0>a || a>10){
        cout<<"no cumple especificaciones";
    }
    else {
        cout<<"ingresa el segundo numero: ";
        cin>>b;
        if(0>b || b>10){
            cout<<"no cumple especificaciones";
        }
        else {
            cout<<"ingresa el tercer numero: ";
            cin>>c;
            if(0>c || c>10){
                cout<<"no cumple especificaciones";
            }
            else{
                p=(a+b+c)/3;
                cout<<"el promedio de los 3 numeros es: "<<p;
            }
        }
    }

     return 0;
}
