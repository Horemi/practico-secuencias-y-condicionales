#include <iostream>

using namespace std;

int main()
{
    int dato=5, numero, repetir,contador=0, suma=0;
    cout<<"ingrese el numero de veces a repetir: ";
    cin>>repetir;
    while(contador<repetir){
        cout<<"ingresar el numero: ";
        cin>>numero;
        if (numero==dato){
            cout<<"el numero es igual a 5"<<endl;
        }
        else{
             if(numero>dato){
             cout<<"el numero es mayor a 5"<<endl;
             }
            else{
            cout<<"el numero es menor a 5"<<endl;
            }
        }
        contador++; //contador=contador+1
        suma=suma+numero;
    }
    cout<<"la suma es: "<<suma;

    return 0;
}
