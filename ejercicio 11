#include <iostream>
using namespace std;

int main()
{
    float P;
    cout << "Ingrese el peso de la carta, por favor: ";
    cin >> P;

    if (P > 0 && P <= 50) {
        cout << "El precio sería Bs. 1.50";
    } 
    else {
        if (P > 50 && P <= 100) {
        cout << "El precio sería Bs. 4.00";
        } 
        else {
            if (P > 100 && P <= 200) {
                cout << "El precio sería Bs. 6.00";
            } 
            else {
                if (P > 200 && P <= 350) {
                    cout << "El precio sería Bs. 10.50";
                } 
                else {
                    if (P > 350 && P <= 500) {
                        cout << "El precio sería Bs. 15.00";
                    } 
                    else {
                        if (P > 500) {
                            cout << "NO SE PUEDE ENVIAR COMO CARTA";
                            } 
                        else {
                            cout << "El peso ingresado no es válido.";
                        }
                    }
                }
            }
        }
    }
                

    return 0;
}
